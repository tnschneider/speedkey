{
    "manifest_version": 2,
    "name": "SpeedKey",
    "version": "1.0.1",
    "description": "Hotkey based speed dial launcher.",
    "icons": {
        "48": "assets/icons/icon.png"
    },
    "content_security_policy": "default-src 'self';",
    "web_accessible_resources": ["assets/icons/*.svg"],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": [
                "lib/vue.js",
                "src/js/debounce.js",
                "src/js/constants.js",
                "src/js/content-script.js"
            ],
            "css": [
                "src/css/style.css"
            ]
        }
    ],
    "background": {
        "scripts": [
            "lib/fuse.js",
            "src/js/constants.js",
            "src/js/settings.js",
            "src/js/background.js"
        ]
    },
    "options_ui": {
        "page": "src/html/options.html"
    },
    "commands": {
        "open-launcher": {
            "suggested_key": {
                "default": "Ctrl+Space"
            },
            "description": "Open the launcher."
        }
    },
    "permissions": [
        "topSites",
        "bookmarks",
        "tabs",
        "search",
        "activeTab",
        "storage"
    ]
}